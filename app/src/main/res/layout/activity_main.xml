<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#000d1a"
        android:orientation="vertical"
>

        <!-- Number of session -->
        <TextView
            android:id="@+id/sessionNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#F0F8FF"
            android:textSize="45sp"
            android:textStyle="bold"
            android:text="SESSION" />

        <!-- Timer -->
        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="25:00"
            android:textColor="#F0F8FF"
            android:textSize="160sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
/>

        <!-- Horizontal layout for start and pause -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="15sp"
            android:orientation="horizontal">

            <!-- Start button-->
            <Button
                android:id="@+id/StartButton"
                android:layout_width="190dp"
                android:layout_height="87dp"
                android:text="START"
                android:textColor="#2E8B57"
                android:backgroundTint="#90EE90"
                android:textSize="34sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="7dp"/>
/>

            <!-- Pause button -->
            <Button
                android:id="@+id/pauseButton"
                android:layout_width="190dp"
                android:layout_height="87dp"
                android:text="PAUSE"
                android:textColor="#8B4513"
                android:backgroundTint="#F08080"
                android:textSize="34sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="7dp"/>
        </LinearLayout>





        <!-- Layout for second row of buttons -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Reset Button -->
            <Button
                android:id="@+id/resetButton"
                android:layout_width="190dp"
                android:layout_height="87dp"
                android:text="RESET"
                android:textSize="34sp"
                android:textStyle="bold"
                android:textColor="#663399"
                android:backgroundTint="#a69de1"
                android:layout_marginHorizontal="7dp"
                />

            <!-- Skip Button -->

            <Button
                android:id="@+id/skipButton"
                android:layout_width="190dp"
                android:layout_height="87dp"
                android:text="SKIP"
                android:textSize="34sp"
                android:textStyle="bold"
                android:textColor="	#BC8F8F"
                android:backgroundTint="#EEE8AA"
                android:layout_marginHorizontal="7dp"
                />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>